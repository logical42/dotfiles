[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "status"]
  added = green
  changed = yellow 
  untracked = cyan
[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  dc = diff --cached
  lg = log -p
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  ls = ls-files
  hist = log --pretty=format:\"%C(yellow) %h %C(cyan)%ad%Creset | %s%d %C(green)[%an]\n\" --graph --date=short
  type = cat-file -t
  dump = cat-file -p
